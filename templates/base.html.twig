<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Ma boutique{% endblock %}</title>
        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('css/app.css') }}">
        {% endblock %}
    </head>
    <body>
        <div>
            {% block body %}{% endblock %}
        </div>
        <div>
            {% block sidebar %}
                <ul>
                    <li>Accueil</li>
                    <li>Liste de produits</li>
                </ul>
            {% endblock %}
        </div>
        {% block javascripts %}
            <script src="{{ asset('js/app.js') }}"></script>
        {% endblock %}
    </body>
</html>
